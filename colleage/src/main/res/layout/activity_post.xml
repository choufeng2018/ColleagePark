<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/app_title_color"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/back"
            android:layout_width="100px"
            android:layout_height="match_parent"

            >

            <ImageView
                android:layout_width="21px"
                android:layout_height="37px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_back_icon"
                android:contentDescription="@string/app_name" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            android:text=""
            android:textColor="@color/white"
            android:textSize="32px" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="92px"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16px"
            android:layout_marginRight="24px"
            android:background="@drawable/circle_publish_bg"
            android:gravity="center"
            android:text="@string/publish"
            android:textColor="@color/white"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoRelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top"
            android:hint="@string/post_content"
            android:maxLength="500"
            android:minHeight="214px"
            android:paddingLeft="32px"
            android:paddingTop="24px"
            android:textColor="@color/gray_46"
            android:textColorHint="#969696"
            android:textSize="30px" />



        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11px"
            android:layout_marginLeft="27px"
            android:layout_marginRight="20px"
            android:layout_marginTop="33px">

            <GridLayout
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3">

            </GridLayout>

            <TextView
                android:id="@+id/post_image_number_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="246px"
                android:text="@string/add_pic_content"
                android:textColor="@color/gray_text_c"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="717px"
            android:layout_height="58px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="105px"
            android:id="@+id/select_type_layout"
            android:layout_marginBottom="100px"
            android:background="@drawable/publish_type_layout_bg">

            <TextView
                android:id="@+id/publish_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32px"
                android:textColor="@color/app_color"
                android:textSize="30px" />

            <View
                android:layout_width="20px"
                android:layout_height="35px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25px"
                android:background="@drawable/publish_right_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="67px"
                android:text="@string/please_select_type"
                android:textColor="@color/gray_b4"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>
</com.zhy.autolayout.AutoLinearLayout>