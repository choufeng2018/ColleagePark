<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
    android:background="#5f000000"

    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="520px"
        android:layout_height="360px"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_forceoffline_shape">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="520px"
            android:id="@+id/layout"
            android:layout_centerHorizontal="true"
            android:layout_height="255px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="任务大厅有新增任务喔，\n请及时派单 ! ! !"
                android:textColor="#5b4d4c"
                android:id="@+id/title_name"
                android:layout_centerInParent="true"
                android:textSize="18sp" />
        </com.zhy.autolayout.AutoRelativeLayout>




        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="105px"
            android:layout_below="@+id/layout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_go"
                android:layout_width="wrap_content"
                android:layout_height="105px"
                android:layout_weight="1"
                android:background="@drawable/dialog_left_appcolor"
                android:text="前往"
                android:layout_marginRight="1dp"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="105px"
                android:layout_weight="1"
                android:background="@drawable/dialog_right_appcolor"
                android:text="关闭"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:visibility="gone"
        android:layout_width="520px"
        android:layout_height="360px"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_common_shape"
        >
        <ImageView
            android:layout_width="79px"
            android:layout_height="81px"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:background="@drawable/dialog_phone_icon"
            android:layout_marginTop="72px"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/call_look_house_phone"
            android:textSize="26px"
            android:textColor="@color/dark_color"
            android:layout_marginTop="35px"
            android:id="@+id/tip_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_color"
            android:layout_marginTop="38px"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="105px"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="260px"
                android:layout_height="match_parent"
                android:textColor="@color/common_dialog_text_color"
                android:textSize="24px"
                android:gravity="center"
                android:id="@+id/cancel"
                android:text="@string/cancel"
                android:background="@color/white"/>
            <Button
                android:layout_width="260px"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_common_shape_confirm"
                android:textColor="@color/white"
                android:textSize="24px"
                android:gravity="center"
                android:id="@+id/confirm"
                android:text="@string/confirm"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>