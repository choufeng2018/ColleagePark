<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable
            name="mode"
            type="com.college.common_libs.domain.recruit.RecruitItemTo"/>
    </data>
    <com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_below="@+id/view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="230px"
        android:id="@+id/recruitLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{mode.title}"
            android:layout_marginLeft="50px"
            android:layout_marginTop="32px"
            android:textSize="32px"
            android:id="@+id/workName"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginLeft="50px"
                android:columnCount="4"
                android:rowCount="1"
                android:id="@+id/welfare">

            </GridLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0px"
            android:layout_marginLeft="50px"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="350px"
                android:text=""
                android:textSize="14px"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/gray_96"
                android:id="@+id/publishTime"
                android:layout_marginTop="10px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{mode.company}"
                android:layout_toRightOf="@+id/wagesRight"
                android:textSize="14px"
                android:textColor="@color/gray_96"
                android:layout_marginTop="10px"
                android:id="@+id/companyName"
                android:layout_marginLeft="15px"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薪资："
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50px"
                android:textSize="18px"
                android:id="@+id/wagesLeft"
                android:textColor="@color/gray_96"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{mode.salary}"

                android:layout_alignParentBottom="true"
                android:textSize="30px"
                android:id="@+id/wages"
                android:textColor="@color/app_color"
                android:layout_toRightOf="@+id/wagesLeft"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/月"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:id="@+id/wagesRight"
                android:textSize="29px"
                android:layout_toRightOf="@id/wages"
                android:textColor="@color/app_color"
                />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/select_layout"
        android:layout_height="70px"
        android:background="#f5f5f5"
        android:layout_below="@+id/recruitLayout"

        >
        <TextView
            android:text="查看详情"
            android:gravity="center"
            android:textSize="26px"
            android:textColor="@color/gray_96"
            android:id="@+id/to_detail"
            android:layout_height="match_parent"
            android:layout_width="375px"/>
        <TextView
            android:textSize="26px"
            android:textColor="@color/gray_96"
            android:id="@+id/phone"
            android:text="直接咨询"
            android:gravity="center"
            android:layout_toRightOf="@+id/to_detail"
            android:layout_height="match_parent"
            android:layout_width="375px"/>
<View
    android:layout_width="4px"
    android:layout_height="24px"
    android:layout_centerInParent="true"
    android:background="#d8d8d8"
    />
    </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#e7e7e7"
            android:layout_below="@+id/select_layout"
            />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="30px"
        android:layout_height="60px"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/isTop"
            android:text="顶"
            android:gravity="center"
            android:textSize="16px"
            android:background="#fe0100"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="30px"/>
        <TextView
            android:id="@+id/isNew"
            android:text="新"
            android:textSize="16px"
            android:gravity="center"
            android:background="#ff6560"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="30px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    </layout>