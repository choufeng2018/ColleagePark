<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/animation_image"
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:layout_marginTop="295px"
        app:layout_auto_basewidth="height"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:visibility="gone" />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/door_list_layout"
        android:layout_width="568px"
        android:layout_height="880px"
        app:layout_auto_basewidth="height"
        android:layout_centerInParent="true"
        android:background="@drawable/door_ling_bg"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            app:layout_auto_basewidth="height"

            >


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="340px"
                android:layout_height="340px"
                app:layout_auto_basewidth="height|marginTop"
                android:id="@+id/code_layout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="352px"

                android:background="@drawable/ling_image_bg">

                <ImageView
                    android:id="@+id/open_door_code"
                    android:layout_width="340px"
                    app:layout_auto_basewidth="height"
                    android:layout_height="340px"
                    android:layout_centerInParent="true" />

            </com.zhy.autolayout.AutoRelativeLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="请用此二维码开门"
               android:textSize="14px"
               android:layout_marginTop="20px"
               android:textColor="#aaaaaa"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/code_layout"
               />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/openShake"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/open_door_dialog_left_button"
                    android:text="摇一摇(已开启)"
                    android:textColor="@color/white"
                    android:textSize="22px" />

                <Button
                    android:id="@+id/oneKeyOpen"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/open_door_dialog_right_button"
                    android:text="一键开门"
                    android:textColor="@color/white"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>