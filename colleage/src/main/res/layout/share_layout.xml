<?xml version="1.0" encoding="utf-8"?>
<layout>


<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

 <com.zhy.autolayout.AutoRelativeLayout
     android:layout_width="match_parent"
     android:layout_alignParentBottom="true"
     android:background="@color/white"
     android:layout_height="336px">
 <com.zhy.autolayout.AutoRelativeLayout
     android:layout_width="match_parent"
     android:layout_height="224px"
     android:layout_alignParentTop="true"
     android:layout_alignParentStart="true">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/share_to"
    android:textSize="26px"
    android:textColor="@color/gray_c"
    android:layout_marginLeft="25px"
    android:layout_marginTop="20px"


    />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="32px"
    android:layout_marginLeft="125px"
    android:orientation="vertical"
    android:id="@+id/wChat"
    >
<View
    android:layout_width="82px"
    android:layout_height="82px"
    android:background="@drawable/share_wchat"
    />
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/wchat"
     android:textSize="28px"
     android:textColor="@color/gray_text46"
     android:layout_gravity="center_horizontal"
     android:layout_marginTop="10px"

     />
</com.zhy.autolayout.AutoLinearLayout>
     <com.zhy.autolayout.AutoLinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="32px"
         android:layout_marginLeft="315px"
         android:orientation="vertical"
         android:id="@+id/QQ"
         >
         <View
             android:layout_width="82px"
             android:layout_height="82px"
             android:background="@drawable/share_qq"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="QQ"
             android:textSize="28px"
             android:textColor="@color/gray_text46"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="10px"
             />
     </com.zhy.autolayout.AutoLinearLayout>
     <com.zhy.autolayout.AutoLinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="32px"
         android:layout_marginLeft="505px"
         android:orientation="vertical"
         android:id="@+id/message"
         >
         <View
             android:layout_width="82px"
             android:layout_height="82px"
             android:background="@drawable/share_message"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/message"
             android:textSize="28px"
             android:textColor="@color/gray_text46"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="10px"
             />
     </com.zhy.autolayout.AutoLinearLayout>
 </com.zhy.autolayout.AutoRelativeLayout>
     <Button
         android:layout_width="match_parent"
         android:layout_height="112px"
         android:text="@string/cancel"
         android:layout_alignParentBottom="true"
         android:textSize="32px"
         android:textColor="@color/white"
         android:gravity="center"
         android:id="@+id/cancel"
         android:background="@color/app_green"
         />

 </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
</layout>