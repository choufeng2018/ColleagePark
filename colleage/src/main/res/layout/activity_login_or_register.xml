<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="366px"
        android:layout_height="304px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220px"
        android:background="@drawable/logon_or_register_icon" />

    <com.ruffian.library.RTextView
        android:id="@+id/login"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="748px"
        app:corner_radius="80px"
        app:border_color_normal="@color/black_3"
        app:border_width_normal="1px"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/black_3"
        android:textSize="36px" />

    <com.ruffian.library.RTextView
        android:id="@+id/register"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        app:corner_radius="80px"
        app:border_color_normal="@color/black_3"
        app:border_width_normal="1px"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/black_3"
        android:textSize="36px" />

</com.zhy.autolayout.AutoRelativeLayout>