<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="vertical">


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/service_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="145px">

            <ImageView
                android:id="@+id/service_icon"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="42px"
                android:src="@drawable/service_icon"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/select_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="157px"
                android:layout_marginRight="46px"
                android:maxLines="3"
                android:text="@string/please_select_complaint_category"
                android:textColor="@color/dark_color"
                android:textSize="28px" />

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="157px"
                android:layout_marginRight="46px"
                android:layout_marginTop="32px"
                android:maxLines="3"
                android:textColor="@color/dark_color"
                android:textSize="28px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/service_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_name"
                android:layout_marginBottom="16px"
                android:layout_marginLeft="157px"
                android:layout_marginRight="46px"
                android:layout_marginTop="15px"

                android:textColor="@color/dark_color"
                android:textSize="26px"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_eb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/gray_f3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_eb" />


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31px"
                android:text="@string/make_a_blueprint"
                android:textColor="@color/gray_c"
                android:textSize="28px" />

            <GridLayout
                android:id="@+id/service_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25px"
                android:layout_marginTop="102px"

                android:columnCount="4">

            </GridLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_eb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="@color/gray_f3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_eb" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/service_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:layout_marginTop="18px"
                android:background="@color/transparent"
                android:gravity="top"
                android:maxLength="200"
                android:hint="@string/i_want_say"
                android:minHeight="245px"
                android:nextFocusDown="@id/repair_time"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:textColor="@color/dark_color"
                android:textColorHint="#cccccc"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/remark_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_f3">

            <View
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="34px"
                android:background="@drawable/property_complaint_describe_icon" />

            <TextView
                android:id="@+id/complaint_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:layout_marginTop="26px"
                android:lineSpacingExtra="4px"
                android:text=""
                android:textColor="@color/dark_color"
                android:textSize="32px" />
            <TextView
                android:id="@+id/complaint_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68px"
                android:lineSpacingExtra="4px"
                android:textColor="@color/app_color"
                android:layout_below="@+id/complaint_describe"
                android:text=""
                android:textSize="32px" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/pay_layout"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_eb" />


        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_property_service_submit_btn_bg"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="34px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>