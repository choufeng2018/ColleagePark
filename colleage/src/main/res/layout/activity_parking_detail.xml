<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mode"
            type="com.college.common_libs.domain.property.ParkingApplyTo" />
    </data>
    <com.zhy.autolayout.AutoLinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/app_title_layout"
                 android:id="@+id/title"/>

        <ScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/my_scrollview"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/status"
                    android:text="@{mode.applyStatusDesc}"
                    android:gravity="center"
                    android:textSize="32px"
                    android:background="@color/gray_f778"
                    android:layout_width="match_parent"
                    android:layout_height="100px"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:paddingBottom="30px"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="28px"
                        android:id="@+id/park_area"
                        android:textColor="@color/app_text_color"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="35px"
                        android:text="期望车位："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="28px"
                        android:layout_alignTop="@+id/park_area"
                        android:layout_toRightOf="@+id/park_area"
                        android:textColor="@color/gray_b4"
                        android:text="@{mode.loadArea}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/app_text_color"
                        android:layout_below="@+id/park_area"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="27px"
                        android:text="申请时长："
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="28px"
                        android:layout_alignTop="@+id/time"
                        android:layout_toRightOf="@+id/time"
                        android:textColor="@color/gray_b4"
                        android:layout_below="@+id/park_area"
                        android:text="@{mode.applyDead}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/app_text_color"
                        android:layout_below="@+id/time"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="27px"
                        android:text="其他："
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="28px"
                        android:layout_alignTop="@+id/other"
                        android:layout_toRightOf="@+id/other"
                        android:textColor="@color/gray_b4"
                        android:layout_below="@+id/park_area"
                        android:text="@{mode.otherDesc}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/image_layout"
                    android:orientation="vertical"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:background="@color/gray_f9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/name_info_layout"
                        android:background="@color/gray_f9"
                        android:paddingBottom="18px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="50px"
                            android:layout_marginTop="23px"
                            android:scaleType="fitXY"
                            android:background="@drawable/circular_decorate"
                            android:layout_width="16px"
                            android:layout_height="16px"/>
                        <TextView
                            android:textSize="28px"
                            android:id="@+id/name"
                            android:textColor="@color/app_text_color"
                            android:layout_marginLeft="90px"
                            android:layout_marginTop="18px"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoRelativeLayout>
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/business_layout"
                        android:background="@color/gray_f9"
                        android:layout_width="match_parent"
                        android:paddingBottom="18px"
                        android:layout_height="wrap_content">
                        <ImageView
                            app:layout_auto_basewidth="height"
                            android:layout_marginLeft="50px"
                            android:layout_marginTop="23px"
                            android:scaleType="fitXY"
                            android:background="@drawable/circular_decorate"
                            android:layout_width="16px"
                            android:layout_height="16px"/>
                        <TextView
                            android:textSize="28px"
                            android:id="@+id/carNo"
                            android:textColor="@color/app_text_color"
                            android:layout_marginLeft="90px"
                            android:layout_marginTop="18px"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoRelativeLayout>
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/apply_type_layout"
                        android:background="@color/gray_f9"
                        android:layout_width="match_parent"
                        android:paddingBottom="18px"
                        android:layout_height="wrap_content">
                        <ImageView
                            app:layout_auto_basewidth="height"

                            android:layout_marginLeft="50px"
                            android:layout_marginTop="23px"
                            android:scaleType="fitXY"
                            android:background="@drawable/circular_decorate"
                            android:layout_width="16px"
                            android:layout_height="16px"/>
                        <TextView
                            android:textSize="28px"
                            android:id="@+id/apply_type"
                            android:textColor="@color/app_text_color"
                            android:layout_marginLeft="90px"
                            android:layout_marginTop="18px"
                            android:text="车位种类："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoRelativeLayout>
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/contract_layout"
                        android:paddingBottom="18px"
                        android:background="@color/gray_f9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="50px"
                            android:layout_marginTop="23px"
                            android:scaleType="fitXY"
                            android:background="@drawable/circular_decorate"
                            android:layout_width="16px"
                            android:layout_height="16px"/>
                        <TextView
                            android:textSize="28px"
                            android:id="@+id/contract"
                            android:textColor="@color/app_text_color"
                            android:layout_marginLeft="90px"
                            android:layout_marginTop="18px"
                            android:text="行驶证"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="90px"
                            android:layout_below="@+id/contract"
                            android:layout_marginTop="30px"
                            android:textSize="26px"
                            android:id="@+id/no_date"
                            android:textColor="@color/gray_b4"
                            android:text="暂无"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <HorizontalScrollView
                            android:layout_marginTop="40px"
                            android:layout_width="680px"
                            android:id="@+id/image_view"
                            android:layout_centerHorizontal="true"
                            android:layout_height="108px"
                            android:scrollbars="none"
                            android:layout_below="@+id/contract"

                            >
                            <LinearLayout
                                android:id="@+id/service_image"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"/>
                        </HorizontalScrollView>
                    </com.zhy.autolayout.AutoRelativeLayout>
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:paddingBottom="18px"
                        android:id="@+id/designer_layout"
                        android:background="@color/gray_f9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            app:layout_auto_basewidth="height"
                            android:layout_marginLeft="50px"
                            android:layout_marginTop="23px"
                            android:scaleType="fitXY"
                            android:background="@drawable/circular_decorate"
                            android:layout_width="16px"
                            android:layout_height="16px"/>
                        <TextView
                            android:textSize="28px"
                            android:id="@+id/apply_time"
                            android:textColor="@color/app_text_color"
                            android:layout_marginLeft="90px"
                            android:layout_marginTop="18px"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/reply_layout"
                    android:layout_marginTop="15px"
                    android:paddingBottom="30px"
                    android:background="@color/gray_f9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/app_text_color"
                        android:layout_marginLeft="50px"
                        android:layout_marginTop="32px"
                        android:text="回复："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="28px"
                        android:textColor="@color/gray_b4"
                        android:layout_marginLeft="50px"
                        android:layout_marginRight="35px"
                        android:layout_marginTop="32px"
                        android:text=""
                        android:id="@+id/reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/reply"
                        android:textSize="28px"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/gray_b4"
                        android:text="@{mode.answerTime}"
                        android:layout_marginTop="25px"
                        android:layout_marginRight="40px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.zhy.autolayout.AutoRelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="70px"/>
            </com.zhy.autolayout.AutoLinearLayout>


        </ScrollView>

    </com.zhy.autolayout.AutoLinearLayout>
</layout>
