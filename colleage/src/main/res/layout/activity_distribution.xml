
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/distribution_title_layout"
             android:id="@+id/title"/>

<android.support.design.widget.CoordinatorLayout
    android:layout_below="@+id/title"
    android:layout_above="@+id/submit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/transparent"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/row"
                android:background="@drawable/house_detail_banner_load"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"  />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v7.widget.RecyclerView
            android:background="@color/gray_e7"
            android:layout_below="@+id/banner"
            android:id="@+id/recycleView_left"
            android:layout_width="150px"
            android:layout_height="match_parent"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/banner"
            android:id="@+id/recycleView_right"
            android:layout_width="600px"
            android:layout_toRightOf="@+id/recycleView_left"
            android:layout_height="match_parent"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</android.support.design.widget.CoordinatorLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:id="@+id/submit_layout"
        android:layout_alignParentBottom="true"
        android:layout_height="100px"
        android:layout_width="match_parent">
<ImageView
    android:id="@+id/iv_icon"
    android:layout_marginBottom="29px"
    android:layout_alignParentBottom="true"
    android:background="@drawable/money_icon"
    android:layout_marginLeft="53px"
    android:layout_width="33px"
    android:layout_height="37px"/>
        <TextView
            android:id="@+id/price_icon"
            android:layout_marginLeft="25px"
            android:layout_marginBottom="26px"
            android:layout_alignParentBottom="true"
            android:text="¥"
            android:layout_toRightOf="@+id/iv_icon"
            android:textSize="34px"
            android:textColor="@color/distribution_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/price_left"
            android:layout_marginLeft="5px"
            android:layout_marginBottom="24px"
            android:layout_alignParentBottom="true"
            android:text="0."
            android:layout_toRightOf="@+id/price_icon"
            android:textSize="42px"
            android:textColor="@color/distribution_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/price_right"
            android:layout_marginBottom="27px"
            android:layout_alignParentBottom="true"
            android:text="00"
            android:layout_toRightOf="@+id/price_left"
            android:textSize="29px"
            android:maxLength="2"
            android:textColor="@color/distribution_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="36px"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_count"
            android:text="共0件商品"
            android:layout_marginLeft="45px"
            android:layout_toRightOf="@+id/price_right"
            android:textSize="20px"
            android:textColor="@color/gray_96"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_submit"
            android:text="去结算"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="37px"
            android:background="@color/distribution_price"
            android:textColor="@color/white"
            android:layout_width="210px"
            android:layout_height="match_parent"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>