<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


        <variable
            name="mode"
            type="com.college.common_libs.domain.rent.HouseRentTo" />
    </data>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/arrow_title_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/look_house"
            android:layout_below="@+id/title_layout"
            android:layout_marginBottom="5px">

            <com.zhy.autolayout.AutoLinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="472px">

                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="450px"
                        android:background="@drawable/house_detail_banner_load"
                        android:transitionName="HouseImage" />

                    <TextView
                        android:id="@+id/banner_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="30px"
                        android:layout_marginRight="24px"
                        android:textColor="@color/white"

                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/house_type"
                        android:layout_width="168px"
                        android:layout_height="48px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="42px"
                        android:background="@drawable/house_nacity_select"
                        android:gravity="center"
                        android:text="@string/nacity_choice"
                        android:textColor="@color/white"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_marginTop="30px"
                    android:hint="@string/no_available"
                    android:text="@{mode.gardenName}"
                    android:textColor="@color/dark_color"
                    android:textColorHint="@color/no_available"
                    android:textSize="36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_marginTop="18px"

                    android:text="@{mode.houseDetailPrice}"
                    android:textColor="@color/house_money"
                    android:textSize="30px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="42px"
                    android:layout_marginTop="19px"
                    android:background="@color/house_detail_line"

                    />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56px"
                        android:layout_marginTop="24px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apartment_layout"
                            android:textColor="@color/app_text_color"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mode.houseType}"
                            android:textColor="@color/no_available"
                            android:textColorHint="@color/no_available"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="374px"
                        android:layout_marginTop="24px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/house_area"
                            android:textColor="@color/app_text_color"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mode.houseDetailArea}"
                            android:textColor="@color/no_available"
                            android:textColorHint="@color/no_available"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56px"
                        android:layout_marginTop="72px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/decoration"
                            android:textColor="@color/app_text_color"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mode.houseDecoration}"
                            android:textColor="@color/no_available"
                            android:textColorHint="@color/no_available"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="374px"
                        android:layout_marginTop="72px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/house_orientation"
                            android:textColor="@color/app_text_color"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mode.houseOrientation}"
                            android:textColor="@color/no_available"
                            android:textColorHint="@color/no_available"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56px"
                        android:layout_marginTop="120px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/structure"
                            android:textColor="@color/app_text_color"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mode.houseStructure}"
                            android:textColor="@color/no_available"
                            android:textColorHint="@color/no_available"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="374px"
                        android:layout_marginTop="120px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/floor"
                            android:textColor="@color/app_text_color"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mode.houseFloor}"
                            android:textColor="@color/no_available"
                            android:textColorHint="@color/no_available"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/pay_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56px"
                        android:layout_marginTop="168px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay_type"
                            android:textColor="@color/app_text_color"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{mode.detailPay}"
                            android:textColor="@color/no_available"
                            android:textColorHint="@color/no_available"
                            android:textSize="30px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="212px"
                        android:orientation="vertical">
                        <com.zhy.autolayout.AutoRelativeLayout
                            android:id="@+id/house_type_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="56px"
                            android:visibility="gone"
                          >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:layout_marginTop="16px"

                                android:background="@color/house_detail_line"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32px"
                                android:text="@string/house_type"
                                android:textColor="@color/app_text_color"
                                android:textSize="30px" />

                            <GridLayout
                                android:id="@+id/grid_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="128px"
                                android:layout_marginTop="32px"
                                android:columnCount="3">

                            </GridLayout>
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:id="@+id/house_electric_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginLeft="56px">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:layout_marginTop="16px"

                                android:background="@color/house_detail_line"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32px"
                                android:text="@string/house_electric"
                                android:textColor="@color/app_text_color"
                                android:textSize="30px" />

                            <GridLayout
                                android:id="@+id/grid_electric_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="128px"
                                android:layout_marginTop="32px"
                                android:columnCount="3">

                            </GridLayout>
                        </com.zhy.autolayout.AutoRelativeLayout>


                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_marginTop="28px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/house_describe"
                        android:textColor="@color/no_available"
                        android:textSize="26px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10px"
                        android:background="@color/house_detail_line" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56px"
                    android:layout_marginRight="24px"
                    android:layout_marginTop="24px"
                    android:lineSpacingExtra="16px"
                    android:text="@{mode.houseDetailDesc}"
                    android:textColor="@color/house_descripe"
                    android:textSize="26px" />

            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/look_house"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_app_click"
            android:gravity="center"
            android:text="@string/contact_look_house"
            android:textColor="@color/white"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</layout>