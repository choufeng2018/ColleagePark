<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
 <variable
     name="mode"
     type="com.college.common_libs.domain.property.FeedbackTo"/>
</data>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
 <com.zhy.autolayout.AutoRelativeLayout
     android:layout_width="match_parent"
     android:layout_height="146px">

  <ImageView
      android:id="@+id/service_icon"
      android:layout_width="90px"
      android:layout_height="90px"
      android:layout_centerVertical="true"
      app:layout_auto_basewidth="height"
      android:layout_marginLeft="50px"
      android:contentDescription="@string/app_name" />

  <com.zhy.autolayout.AutoLinearLayout
      android:id="@+id/service_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="170px"
      android:layout_marginRight="100px"
      android:orientation="vertical">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32px"
       android:ellipsize="end"
       android:maxLines="1"
       android:text="@string/praise_message"
       android:id="@+id/message_info"
       android:textColor="@color/dark_color"
       android:textSize="30px" />

   <TextView
       android:id="@+id/service_description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15px"
       android:textColor="#7b7b7b"
       android:text="@{mode.feedbackContent}"
       android:textSize="26px" />

  </com.zhy.autolayout.AutoLinearLayout>

  <TextView
      android:id="@+id/service_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginRight="17px"
      android:layout_marginTop="32px"
      android:textColor="#7b7b7b"
      android:textSize="22px" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginLeft="36px"
      android:layout_alignParentBottom="true"
      android:background="@color/gray_eb" />
 </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
</layout>